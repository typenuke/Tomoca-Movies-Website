
@{
    ViewBag.Title = "TicketShow";
    Layout = "~/Views/Shared/Tomoca_Layout.cshtml";
}
@section css{
    <link href="~/Content/bootstrap-5.0.2-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style-ticket-show.css" rel="stylesheet" />
}
@section scriptstren{
    <script src="~/Scripts/qrcode.min.js"></script>
    <script src="~/Scripts/script-detail.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}

<body onload="onReady()">
    <div style="width:auto; height:700px;">
        <div class="bg-image">
            <div class="bg-color"></div>
        </div>
        <div class="bg-ticket">
            <div class="img-movie">
                <img width="270px" height="403px" src="~/Content/image_review/Rectangle 25.png" alt="">
            </div>
            <div class="info-movie">
                <p id="Movie-name">A QUIET PLACE PART II</p>
                <p id="category"> HORROR • SCI-FI  • DRAMA <span id="Show-time">TUESDAY, JUN 30 - 1:30 PM</span> </p>
                <p id="show-time-language">
                    <img width="15px" src="~/Content/image_review/clock.png" alt="Clock"><span>1h 37 min</span>
                    <img width="22px" src="~/Content/image_review/volume-1.png" alt="Volumn"><span>English</span>
                    <img width="20px" src="~/Content/image_review/Group 118 (1).png" alt="CC"><span>Vietnamese</span>
                </p>
                <p id="Seat-information">
                    <span>Seat(s)</span>
                    <span>Hall</span>
                    <span>Seat Number</span>
                    <span style="margin-right:0px">Booking ID</span>
                <p id="Seat-information-1">
                    <span style="margin-right: 67px">02</span>
                    <span style="margin-right: 65px;">5</span>
                    <span style="margin-right: 67px;">D8, D9</span>
                    <span>WF6SZ53</span>
                </p>
                </p>
                <p class="info-cinema">
                    <img width="70px" src="~/Content/image_review/Rectangle 209.png" alt="">
                    <span id="info-cinema-name">CGV Aeon Bình Tân</span>
                <p id="info-address">Tầng 3, Trung tâm thương mại Aeon Mall Bình Tân, 1 Đường Số 17A, An Lạc, Bình Tân, Thành phố Hồ Chí Minh </p>
                </p>
            </div>
            <div class="border-dash">
                <div class="qr-code">
                    <div class="format-qrcode" id="id_qrcode"></div>
                    <p style="font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
          font-style: normal;
          font-weight: normal;
          font-size: 14px;
          line-height: 114.7%;
          padding-top:15px;
          width:165px;
          color: #999999;">Give this code to the staffs</p>
                    <div class="format-contact">
                        <img width="15px" src="~/Content/image_review/mail.png" alt="">
                        <a href="#">Send to Email</a>
                        <br>
                        <br>
                        <img width="15px" src="~/Content/image_review/facebook.png" alt="">
                        <a href="#">Send to Facebook</a>
                        <br>
                    </div>
                    <button class="button-back-to-home">Back to Home page</button>
                </div>
            </div>
            <div class="circle"></div>
        </div>
    </div>
</body>




