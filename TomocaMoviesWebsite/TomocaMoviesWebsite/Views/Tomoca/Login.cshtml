                    <p style="margin: 90px 0 0 175px; color:#fff; width: 27px; height: 28px; font-family: Roboto; font-style: normal; font-weight: 300; font-size: 24px;">Or</p>
                    <img src="~/Content/imgloginsignup/Movie Night-amico 1.png" />
                    <p class="createaccount" style=" margin-left: 90px; width: 202px; height: 39px; background: #FF7300; border: 1px solid #F5F5F5; border-radius: 19.5px;"><a style="color:#FFF !important;" href="~/Users/Signup">Create a new account</a></p>
                </div>
            </div>
        </div>
    </div>
}