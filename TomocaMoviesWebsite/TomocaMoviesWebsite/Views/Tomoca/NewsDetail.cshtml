@model TomocaMoviesWebsite.Models.readNew


@using TomocaMoviesWebsite.Models
@{
    ViewBag.Title = "NewsDetail";
    Layout = "~/Views/Shared/Tomoca_Layout.cshtml";
}
@{
    var count = 1;
    TomocaMoviesDataContext db = new TomocaMoviesDataContext();
    var danhsach = db.News.OrderByDescending(a => a.NewsID).Take(6).ToList();
}
