@{
    ViewBag.Title = "SuaTap";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@model WebXemPhim.Models.CTTapPhim
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-field">
            <table>
                <tr>
                    <td>
                        <b>ID phim  </b>
                    </td>
                    <td>
                        @Model.ID
                    </td>
                </tr>
                <tr>                 
                    <td style="width:125px"><b> Tập phim</b></td>
                    
                      <td>@Model.TapPhim
                    </td>
                </tr>
                <tr>                 
                    <td style="width:125px"><b> Link phim</b></td>
                    <td>@Html.TextBoxFor(model => model.Link,new {@class="form-control"}) 
                        </td>
                        <td style="color:red">
                        @ViewData["Loi1"]
                             @ViewData["Loi2"]
                        </td>
                </tr>
            </table>
        </div>
        <p>
            <input type="submit" value="Lưu cập nhật" class="btn btn-success" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Trở lại", "QuocGia","DanhMuc")
</div>

