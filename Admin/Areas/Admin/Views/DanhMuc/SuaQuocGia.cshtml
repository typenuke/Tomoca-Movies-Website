@model WebXemPhim.Models.QuocGia
@{
    ViewBag.Title = "SuaQuocGia";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}


<h2>Sửa quốc gia</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-field">
            <table>
                <tr>
                    <td>
                        <b>Mã QG  </b>
                    </td>
                    <td>
                        @Model.MaQG
                    </td>
                </tr>
                <tr>                 
                    <td style="width:125px"><b> Tên quốc gia</b></td>
                    <td>@Html.TextBoxFor(model => model.TenQG,new {@class="form-control"}) 
                        </td>
                        <td style="color:red">
                        @ViewData["Loi1"]
                             @ViewData["Loi2"]
                        </td>
                </tr>
            </table>
        </div>
        <p>
            <input type="submit" value="Lưu cập nhật" class="btn btn-success" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Trở lại", "QuocGia","DanhMuc")
</div>


