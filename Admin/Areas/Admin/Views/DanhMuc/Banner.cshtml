@{
    ViewBag.Title = "Banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-10"><h1 class="h3 mb-2 text-gray-800">Banner</h1></div>
   
</div>
<br />
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="text-align:center">ID Banner</th>
                        <th style="text-align:center">Hình</th>
                        <th style="text-align:center">Phim</th>
                        <th style="text-align: center">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th style="text-align:center">ID Banner</th>
                        <th style="text-align:center">Hình</th>
                        <th style="text-align:center">Phim</th>
                        <th style="text-align: center">Chức năng</th>
                        </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {                     
                        <tr>
                            <td style="text-align:center;padding-top:50px">@item.ID</td>
                            <td style="text-align:center"><img width="200px" src="~/Content/Images/@item.Img" /></td>
                            <td style="text-align:center;padding-top:50px" >@item.DSPhimBo.TenPhim</td>
                            <td style="width: 14%; text-align: center ;padding-top:50px">
                                <a href="@Url.Action("SuaBanner", new { id = item.ID})" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                </a>                                                           
                            </td>
                        </tr>              
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

