@model WebXemPhim.Models.Nam
@{
    ViewBag.Title = "SuaNam";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}


<h2>Sửa Năm Phát Hành</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-field">
            <table>
                <tr>
                    <td>
                        <b>Mã NPH: </b>
                    </td>
                    <td>
                        @Model.MaNam
                    </td>
                </tr>
                <tr>                 
                    <td style="width:125px"><b> Năm phát hành</b></td>
                    <td>@Html.TextBoxFor(model => model.TenNam,new {@class="form-control"}) 
                        </td>
                        <td style="color:red">
                        @ViewData["Loi1"] @ViewData["Loi2"]</td>
                </tr>
            </table>
        </div>
        <p>
            <input type="submit" value="Lưu cập nhật" class="btn btn-success" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Trở lại", "TheLoai","DanhMuc")
</div>


