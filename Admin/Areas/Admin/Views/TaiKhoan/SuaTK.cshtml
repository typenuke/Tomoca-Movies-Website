@model WebXemPhim.Models.TaiKhoan
@{
    ViewBag.Title = "SuaTK";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Sửa tài khoản</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-field">
            <table>
                <tr>
                    <td>
                        <b>Tên đăng nhâp :  </b>
                    </td>
                    <td>
                        @Model.TenDN
                    </td>
                </tr>
                <tr>                 
                    <td style="width:125px"><b>Mật khẩu </b></td>
                    <td>@Html.TextBoxFor(model => model.MatKhau,new {@class="form-control"}) 
                        @ViewData["Loi"]</td>
                </tr>
            </table>
        </div>
        <p>
            <input type="submit" value="Lưu cập nhật" class="btn btn-success" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Trở lại", "DSTaiKhoan","TaiKhoan")
</div>
